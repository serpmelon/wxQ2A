<view class="page">
  <view class="page__hd">
    <view class="page__title">List</view>
    <view class="page__desc">列表</view>
  </view>
  <view class="page__bd">
    <view class="weui-cells__title">带说明的列表项</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">{{showQA.question}}</view>
      </view>
    </view>
  </view>
  <view class="weui-cells__title">单选列表项</view>
  <view class="weui-cells weui-cells_after-title">
    <radio-group bindchange="radioChange">
      <label class="weui-cell weui-check__label" wx:for="{{showQA.answerList}}">
      <radio class="weui-check" value="{{item.id}}" checked="{{item.checked}}"/>
        <view class="weui-cell__bd">{{item.answer}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
          <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
        </view>
      </label>
    </radio-group>
  </view>
</view>